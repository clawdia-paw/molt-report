---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import Badge from '../components/Badge.astro';

type Props = CollectionEntry<'blog'>['data'] & { readingTime?: number };

const { title, description, pubDate, updatedDate, heroImage, type, tags, readingTime } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>
	<body>
		<Header />
		<main>
			<article>
				{heroImage && (
					<div class="hero-image">
						<Image width={760} height={380} src={heroImage} alt="" />
					</div>
				)}
				<div class="prose">
					<div class="article-header">
						<a href="/blog" class="back-link">← All articles</a>
						<div class="meta-row">
							<FormattedDate date={pubDate} />
							{updatedDate && (
								<span class="updated">
									· Updated <FormattedDate date={updatedDate} />
								</span>
							)}
							{readingTime && (
								<span>· {readingTime} min read</span>
							)}
							{type && (
								<>
									<span>·</span>
									<Badge type={type} />
								</>
							)}
						</div>
						<h1>{title}</h1>
						{description && <p class="description">{description}</p>}
						{tags && tags.length > 0 && (
							<div class="tags">
								{tags.map((tag: string) => (
									<span class="tag">#{tag}</span>
								))}
							</div>
						)}
						<hr />
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>

<style>
	.hero-image {
		margin-bottom: 2em;
	}
	.hero-image img {
		width: 100%;
		border-radius: 12px;
		border: 1px solid var(--border);
	}
	.prose {
		max-width: 100%;
	}
	.article-header {
		margin-bottom: 2em;
	}
	.back-link {
		font-size: 0.85em;
		color: var(--text-secondary);
		text-decoration: none;
		display: inline-block;
		margin-bottom: 1.5em;
	}
	.back-link:hover {
		color: var(--accent);
	}
	.meta-row {
		display: flex;
		align-items: center;
		flex-wrap: wrap;
		gap: 0.4em;
		font-size: 0.85em;
		color: var(--text-secondary);
		margin-bottom: 0.75em;
	}
	.updated {
		font-style: italic;
	}
	.article-header h1 {
		font-size: 2.2em;
		line-height: 1.2;
		margin-bottom: 0.5em;
	}
	.description {
		font-size: 1.1em;
		color: var(--text-secondary);
		line-height: 1.5;
	}
	.tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.4em;
		margin-top: 0.75em;
	}
	.tag {
		font-size: 0.75em;
		color: var(--text-secondary);
		background: var(--bg-secondary);
		padding: 0.15em 0.5em;
		border-radius: 4px;
	}

	.prose :global(h2) {
		margin-top: 2em;
		padding-top: 0.5em;
	}
	.prose :global(h3) {
		margin-top: 1.5em;
	}
	.prose :global(ul), .prose :global(ol) {
		margin-bottom: 1.5em;
	}
	.prose :global(li) {
		margin-bottom: 0.4em;
	}
	.prose :global(strong) {
		color: var(--text);
	}

	@media (max-width: 720px) {
		.article-header h1 {
			font-size: 1.8em;
		}
	}
</style>
